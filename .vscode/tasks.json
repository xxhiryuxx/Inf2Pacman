{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Pacman (macOS)",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++17",
                "main.cpp",
                "-o",
                "main",
                "-I/opt/homebrew/opt/raylib/include",
                "-L/opt/homebrew/opt/raylib/lib",
                "-lraylib",
                "-framework", "OpenGL",
                "-framework", "Cocoa",
                "-framework", "IOKit",
                "-framework", "CoreVideo"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "os": "darwin"
        },
        {
            "label": "Build Pacman (Windows)",
            "type": "cppbuild",
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-std=c++17",
                "main.cpp",
                "-o",
                "main.exe",
                "-IC:\\raylib\\include",
                "-LC:\\raylib\\lib",
                "-lraylib",
                "-lopengl32",
                "-lgdi32",
                "-lwinmm"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "os": "windows"
        }
    ]
}