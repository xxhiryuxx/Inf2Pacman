{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Pacman",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++17",
                "main.cpp",
                "-o",
                "main",
                "-I/opt/homebrew/opt/raylib/include",
                "-L/opt/homebrew/opt/raylib/lib",
                "-lraylib",
                "-framework", "OpenGL",
                "-framework", "Cocoa",
                "-framework", "IOKit",
                "-framework", "CoreVideo"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}
